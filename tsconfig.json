{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@firebase/auth": [
				"./node_modules/@firebase/auth/dist/index.rn.d.ts"
			],

			"@config/*": ["./app/config/*"],
			"@components/*": ["./app/components/*"],
			"@/*": ["./app/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
